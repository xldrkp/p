---
layout: layouts/base.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /{{ lang }}/tags/{{ tag | slug }}/
---

{% block content %}

<div class="container">
  <h1>Tagged “{{ tag }}”</h1>

  {% set posts = collections[tag] %}
  {% include 'components/postslist.njk' %}

  <p>See <a href="{{ '/{{ lang }}/tags/' | url }}">all tags</a>.</p>
</div>

{% endblock %}